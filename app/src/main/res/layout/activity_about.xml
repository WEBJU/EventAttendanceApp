<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Event Attendance Recording"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

    </TextView>

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text=" Advanced event attendance tool"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">

    </TextView>

    <ImageView
        android:id="@+id/imageEmail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAbout"
        app:srcCompat="@drawable/ic_email"
        app:tint="@color/md_theme_dark_primary">
    </ImageView>

    <TextView
        android:id="@+id/txtMail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Email: contact@eventaatendance.com"
        app:layout_constraintStart_toEndOf="@id/imageEmail"
        app:layout_constraintTop_toTopOf="@id/imageEmail"
        app:layout_constraintBottom_toBottomOf="@id/imageEmail"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageSkype"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageEmail"
        app:srcCompat="@drawable/ic_skype"
        app:tint="@color/md_theme_dark_primary"></ImageView>

    <TextView
        android:id="@+id/txtSkype"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Skype: live:.event"
        app:layout_constraintStart_toEndOf="@id/imageSkype"
        app:layout_constraintTop_toTopOf="@id/imageSkype"
        app:layout_constraintBottom_toBottomOf="@id/imageSkype"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageTelegram"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSkype"
        app:srcCompat="@drawable/ic_telegram"
        app:tint="@color/md_theme_dark_primary"></ImageView>

    <TextView
        android:id="@+id/txtTelegram"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Telegram: @kbyai"
        app:layout_constraintStart_toEndOf="@id/imageTelegram"
        app:layout_constraintTop_toTopOf="@id/imageTelegram"
        app:layout_constraintBottom_toBottomOf="@id/imageTelegram"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageWhatsApp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageTelegram"
        app:srcCompat="@drawable/ic_whatsapp"
        app:tint="@color/md_theme_dark_primary"></ImageView>

    <TextView
        android:id="@+id/txtWhatsapp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="WhatsApp: +254727695886"
        app:layout_constraintStart_toEndOf="@id/imageWhatsApp"
        app:layout_constraintTop_toTopOf="@id/imageWhatsApp"
        app:layout_constraintBottom_toBottomOf="@id/imageWhatsApp"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageGithub"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageWhatsApp"
        app:srcCompat="@drawable/ic_github"
        app:tint="@color/md_theme_dark_primary"></ImageView>

    <TextView
        android:id="@+id/txtGitHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Github: https://github.com"
        app:layout_constraintStart_toEndOf="@id/imageGithub"
        app:layout_constraintTop_toTopOf="@id/imageGithub"
        app:layout_constraintBottom_toBottomOf="@id/imageGithub"
        android:autoLink="web"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>